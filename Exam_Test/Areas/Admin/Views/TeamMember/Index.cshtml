@using Core.Entities
@model IEnumerable<TeamMember>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body" style="width:1000px">
            <h4 class="card-title">Team Member Table</h4>
            <a asp-action="Create">Create new team member</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Position
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td class="py-1">
                                <img src="~/admin/assets/images/faces/@item.Image" alt="image" />
                            </td>
                            <td>
                                @item.Name
                            </td>
                          
                            <td>
                                @item.Position
                            </td>
                                <td>
                                   <a class="btn btn-primary" asp-controller="TeamMember"  asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                                    <a class="btn btn-primary" asp-controller="TeamMember"  asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-primary" asp-controller="TeamMember"  asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                        </tr>
                            
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
